# .gitattributes for the 'sockpp' repository

# Use default native line endings
* text=auto

# Specify file type for line handling
*.cpp              text
*.c                text
*.h                text
*.hpp              text
*.md               text
*.txt              text
*.ac               text
*.yml              text
*.cfg              text
*.config           text
*.html             text
Makefile           text
*.jpg              binary
*.png              binary
*.tif              binary
*.project          text
*.properties       text
*.py               text
*.txt              text
*.url              text
*.xml              text

# Windows-specific text files
*.bat              text eol=crlf

# Linux-specific text files
*.sh               text eol=lf

